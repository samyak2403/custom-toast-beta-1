<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Primary Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_primary"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Primary Button"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/purple_500"
        app:cornerRadius="8dp" />

    <!-- Secondary Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_secondary"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Secondary Button"
        android:textColor="@color/purple_500"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp" />

    <!-- Success Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_success"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Success Button"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/green_500"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_success"
        app:iconTint="@android:color/white" />

    <!-- Warning Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_warning"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Warning Button"
        android:textColor="@android:color/black"
        app:backgroundTint="@color/yellow_500"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_warning"
        app:iconTint="@android:color/black" />

    <!-- Error Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_error"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Error Button"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/red_500"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_error"
        app:iconTint="@android:color/white" />

    <!-- Disabled Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_disabled"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Disabled Button"
        android:textColor="@color/gray_400"
        app:backgroundTint="@color/gray_200"
        app:cornerRadius="8dp" />

</LinearLayout>